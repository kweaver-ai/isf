{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "请求体结构定义 - filter",
    "required": [
        "accessor",
        "resources",
        "operation",
        "method"
    ],
    "properties": {
        "accessor": {
            "type": "object",
            "description": "访问者信息",
            "required": [
                "id",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "user",
                        "app"
                    ]
                }
            }
        },
        "resources": {
            "type": "array",
            "description": "资源列表",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    }
                }
            }
        },
        "operation": {
            "description": "操作",
            "type":"array",
            "uniqueItems": true,
            "items": {
              "type": "string"
            }
        },
        "method": {
            "type": "string",
            "description": "方法",
            "enum": [
                "GET"
            ]
        },
        "allow_operation": {
            "type": "boolean",
            "description": "是否返回允许的操作",
            "default": false
        },
        "include": {
            "type": "array",
            "description": "返回的额外信息",
            "items": {
                "type": "string",
                "enum": [
                    "operation_obligations"
                ]
            }
        }
    }
}